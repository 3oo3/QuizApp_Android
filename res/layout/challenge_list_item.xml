<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp" >

    <LinearLayout
	    android:id="@+id/item_wrapper_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/list_item_bg"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="3dp"
        android:textColor="#ffffff" >

        <com.amcolabs.quizapp.widgets.GothamTextView
            android:id="@+id/sNoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.0"
            android:text="" />

        <ImageView
            android:id="@+id/uid_image_1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.0"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

        <LinearLayout
            android:id="@+id/item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.amcolabs.quizapp.widgets.GothamTextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="User Challenges you in"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.amcolabs.quizapp.widgets.GothamTextView
                android:id="@+id/short_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="identify actresses with a score of 129" />

        </LinearLayout>

        <ImageView
            android:id="@+id/uid_image_2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.0"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    </LinearLayout>

</LinearLayout>
