<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    
    <ImageView
        android:id="@+id/badgeImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:src="@drawable/ic_launcher" />

    <com.amcolabs.quizapp.widgets.GothamTextView
        android:id="@+id/badgeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/badgeImage"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Quiz App Badge"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.amcolabs.quizapp.widgets.GothamTextView
        android:id="@+id/badgeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badgeName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="This badge gets unlocked when you play Quiz"
        android:textSize="16sp" />

</RelativeLayout>
