<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
   	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black"
    android:orientation="vertical"
    android:padding="30dp" >

    <com.quizapp.tollywood.widgets.GothamTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Waiting For User to respond..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttons_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:orientation="horizontal" >
        
       <com.quizapp.tollywood.widgets.QuizAppMenuItem
           android:id="@+id/start_offline_challenge"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="20dp"
           android:padding="10dp"
           fancy:borderColor="#FFFFFF"
           fancy:borderWidth="1dp"
           fancy:defaultColor="#3b5998"
           fancy:focusColor="#5577bd"
           fancy:fontIconSize="10sp"
           fancy:iconPosition="right"
           fancy:radius="30dp"
           fancy:text="Start Now"
           fancy:textColor="#FFFFFF" >

                </com.quizapp.tollywood.widgets.QuizAppMenuItem>
        
          <com.quizapp.tollywood.widgets.QuizAppMenuItem
              android:id="@+id/exit_challenge_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              fancy:borderColor="#FFFFFF"
              fancy:borderWidth="1dp"
              fancy:defaultColor="#3b5998"
              fancy:focusColor="#5577bd"
              fancy:fontIconSize="10sp"
              fancy:iconPosition="right"
              fancy:radius="30dp"
              fancy:text="Exit Challenge"
              fancy:textColor="#FFFFFF" >
              
          </com.quizapp.tollywood.widgets.QuizAppMenuItem>
        
    </LinearLayout>

</LinearLayout>
